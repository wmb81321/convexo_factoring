# -------- Coinbase Dev Platform --------
COINBASE_API_KEY=your_coinbase_api_key_here

# -------- Privy --------
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_SECRET=your_privy_secret_here

# -------- Alchemy (Gas Manager + RPC) --------
ALCHEMY_API_KEY=your_alchemy_api_key_here
